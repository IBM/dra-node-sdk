{
  "name": "@ibm-cloud/dr-automation-service",
  "version": "0.0.1",
  "description": "IBM Cloud DrAutomation Node SDK",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IBM/dra-node-sdk.git"
  },
  "keywords": [
    "ibm"
  ],
  "author": "IBM Corp.",
  "scripts": {
    "clean": "rm -rf node_modules",
    "eslint:fix": "eslint . --fix",
    "eslint:check": "eslint . --cache",
    "lint": "npm run eslint:check",
    "lint-fix": "npm run eslint:fix",
    "build": "tsc && cp package.json dist/ && mkdir -p dist/test/resources && cp test/resources/auth-helper.js dist/test/resources/",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build && mkdir -p auth && cp test/resources/auth-helper.js auth/ && shx cp -r dist/* . && shx rm -rf dist",
    "postversion": "",
    "jest": "jest",
    "test": "npm run build && npm run lint && jest test/",
    "test-unit": "npm run build && jest test/unit/",
    "test-integration": "npm run build && jest test/integration",
    "test-examples": "npm run build && jest examples/",
    "test-travis": "jest --runInBand --testNamePattern='^((?!@slow).)*$' test/",
    "test-unit-travis": "jest --runInBand test/unit/",
    "test-integration-travis": "jest --runInBand --no-colors --testNamePattern='^((?!@slow).)*$' --json test/integration > test-output.log",
    "check-packages": "installed-check -e -d -v",
    "all": "npm run test-unit && npm run lint",
    "semantic-release": "semantic-release"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=24.9.0"
  },
  "dependencies": {
    "@ibm-cloud/platform-services": "^0.79.1",
    "@types/node": "^24.9.1",
    "dotenv": "^16.4.5",
    "extend": "3.0.2",
    "ibm-cloud-sdk-core": "^5.4.1"
  },
  "devDependencies": {
    "@ibm-cloud/sdk-test-utilities": "^1.0.0",
    "@masterodin/publisher": "^0.10.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "^13.1.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.24.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsdoc": "^34.6.3",
    "eslint-plugin-node": "^9.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "installed-check": "^2.2.0",
    "jest": "^29.7.0",
    "nock": "^14.0.1",
    "prettier": "^2.3.0",
    "semantic-release": "^25.0.2",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "micromatch": "^4.0.8",
    "braces": "^3.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/",
      "<rootDir>/examples/"
    ],
    "testEnvironment": "node"
  },
  "main": "dr-automation-service/v1",
  "directories": {
    "example": "examples",
    "lib": "lib",
    "test": "test"
  },
  "types": "./dr-automation-service/v1.d.ts",
  "bugs": {
    "url": "https://github.com/IBM/dra-node-sdk/issues"
  },
  "homepage": "https://github.com/IBM/dra-node-sdk#readme"
}
